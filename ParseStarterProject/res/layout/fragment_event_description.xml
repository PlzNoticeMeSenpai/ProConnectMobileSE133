<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewTitleEvent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Title of Event"
        android:gravity="center"
        android:textSize="30dp"
        android:paddingTop="5dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextTitleEvent"
        android:layout_below="@+id/textViewTitleEvent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textSize="15dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:clickable="false"
        android:editable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date of Event"
        android:id="@+id/textViewDateEvent"
        android:layout_below="@+id/editTextTitleEvent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="30dp"
        android:paddingTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDateEvent"
        android:layout_below="@+id/textViewDateEvent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textSize="15dp"
        android:paddingTop="5dp"
        android:clickable="false"
        android:editable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time of Event"
        android:id="@+id/textViewTimeEvent"
        android:layout_below="@+id/editTextDateEvent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="30dp"
        android:paddingTop="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextTimeEvent"
        android:layout_below="@+id/textViewTimeEvent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textSize="15dp"
        android:paddingTop="5dp"
        android:clickable="false"
        android:editable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Location of Event"
        android:id="@+id/textViewLocationEvent"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_below="@+id/editTextTimeEvent"
        android:paddingTop="10dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextLocationEvent"
        android:layout_below="@+id/textViewLocationEvent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textSize="15dp"
        android:paddingTop="10dp"
        android:clickable="false"
        android:editable="false"/>


</RelativeLayout>
